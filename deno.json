{
  "tasks": {
    "create": "deno run -A mod.ts create",
    "show": "deno run -A mod.ts show",
    "send": "deno run -A mod.ts send",
    "call": "deno run -A mod.ts call"
  },
  "imports": {
    "@scure/bip39": "jsr:@scure/bip39@^1.5.4",
    "@std/assert": "jsr:@std/assert@1",
    "@std/path": "jsr:@std/path@^1.0.8"
  },
  "fmt": {
    "semiColons": false,
    "singleQuote": true,
    "lineWidth": 120,
    "useTabs": false,
    "indentWidth": 2,
    "proseWrap": "preserve"
  }
}
